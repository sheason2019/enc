// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id         Int    @id @default(autoincrement())
  ecdhPubkey String
  signPubkey String

  snapshot  Bytes
  signature Bytes?

  Operation Operation[]
  Message   Message[]
  RtcRecord RtcRecord[]
  Group     Group[]
}

model Operation {
  id       Int    @id @default(autoincrement())
  clientId String
  clock    Int
  data     String

  accountID Int
  account   Account @relation(fields: [accountID], references: [id])
}

model Message {
  id        Int   @id @default(autoincrement())
  signature Bytes
  buffer    Bytes

  Account Account[]
}

model RtcRecord {
  id         Int    @id @default(autoincrement())
  serviceUrl String
  uuid       String
  name       String

  accountID Int
  account   Account @relation(fields: [accountID], references: [id])
}

model Group {
  id        Int     @id @default(autoincrement())
  accountID Int
  account   Account @relation(fields: [accountID], references: [id])

  agentSecret          Bytes
  portableConversation Bytes

  GroupMembers GroupMembers[]
}

model GroupMembers {
  id Int @id @default(autoincrement())

  groupID Int
  group   Group @relation(fields: [groupID], references: [id])

  signPubkey String
  snapshot   Bytes
}
